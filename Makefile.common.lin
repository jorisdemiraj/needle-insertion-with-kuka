# compiler
CC      ?= gcc
CXX     ?= g++
COMPILER = $(CC)

# common compiler flags
CFLAGS   += -DLINUX -Wno-deprecated
CXXFLAGS += -DLINUX -Wno-deprecated -std=c++0x

# set target architecture
ifeq ($(ARCH), x86_64)
CFLAGS   += -m64
CXXFLAGS += -m64
endif
ifeq ($(ARCH), i686)
CFLAGS   += -m32 -march=i686 -msse2 -mtune=generic
CXXFLAGS += -m32 -march=i686 -msse2 -mtune=generic
endif
ifeq ($(ARCH), native)
CFLAGS   += -march=native
CXXFLAGS += -march=native
endif

# common linker flags
LDLIBS   += -lpthread -lrt -ldl -lGL -lusb-1.0

# platform-specific GLUT libraries
LDLIBS_GLUT = -lGLU -lglut

# shared library definition
SHARED_OPT  = -shared -Wl,-soname,$(LIB_NAME)
LIB_TARGET  = $(BIN_DIR)/lib$(LIB_NAME).so
